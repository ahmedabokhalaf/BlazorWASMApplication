@page "/employee/update/{EmpId:int}"
@using WASM.App.Services;
<h3>EditEmployee</h3>
@if (Saved==false)
{
    <h1 class="card-title">Enter Fields of @Employee.FirstName @Employee.LastName to Edit</h1>
    <EditForm Model="@Employee" OnValidSubmit="HandelValidSubmit" OnInvalidSubmit="HandelInvalidSubmit">
        <div class="form-group">
            <label class="col-form-label">First Name: </label>
            <InputText id="FirstName" class="form-control" @bind-Value="@Employee.FirstName"></InputText>
            <ValidationMessage For="@(()=>Employee.FirstName)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Last Name: </label>
            <InputText id="LastName" class="form-control" @bind-Value="@Employee.LastName"></InputText>
            <ValidationMessage For="@(()=>Employee.LastName)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Marital Status: </label>
            <InputSelect id="MaritalStatus" class="form-control" @bind-Value="@Employee.MaritalStatus">
                <option value="-1">- - Please Select - -</option>
                <option value="@(MaritalStatus.Single)">Single</option>
                <option value="@(MaritalStatus.Married)">Married</option>
                <option value="@(MaritalStatus.Absolute)">Absolute</option>
                <option value="@(MaritalStatus.Engaged)">Engaged</option>
                <option value="@(MaritalStatus.Other)">Other</option>
            </InputSelect>
            <ValidationMessage For="@(()=>Employee.MaritalStatus)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Email: </label>
            <InputText id="Email" class="form-control" @bind-Value="@Employee.Email"></InputText>
            <ValidationMessage For="@(()=>Employee.Email)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Phone Number: </label>
            <InputText id="PhoneNumber" class="form-control" @bind-value="@Employee.PhoneNumber"></InputText>
            <ValidationMessage For="@(()=>Employee.PhoneNumber)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Gender: </label>
            <InputSelect id="Gender" class="form-control" @bind-Value="@Employee.Gender">
                <option value="-1">- - Please Select - -</option>
                <option value="@(Gender.Male)">Male</option>
                <option value="@(Gender.Female)">Female</option>
            </InputSelect>
            <ValidationMessage For="@(()=>Employee.Gender)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Birthdate: </label>
            <InputDate id="BirthDate" class="form-control" @bind-Value="@Employee.BirthDate"></InputDate>
            <ValidationMessage For="@(()=>Employee.BirthDate)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Joined Date: </label>
            <InputDate id="JoinedDate" class="form-control" @bind-Value="@Employee.JoinedDate"></InputDate>
            <ValidationMessage For="@(()=>Employee.JoinedDate)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Exit Date: </label>
            <InputDate id="ExitDate" class="form-control" @bind-Value="@Employee.ExitDate"></InputDate>
            <ValidationMessage For="@(()=>Employee.ExitDate)"></ValidationMessage>
        </div>
        <div class="form-group">
            <label class="col-form-label">Country: </label>
            <InputSelect id="Country" class="form-control" @bind-Value="@Employee.Country">
                <option value="0" selected>- - Select Country - -</option>
                @foreach (var item in Countries)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </InputSelect>
            <ValidationMessage For="@(()=>Employee.Country)"></ValidationMessage>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </EditForm>
}
else
{
    <div class="@Status">@Message</div>
}